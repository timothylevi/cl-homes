<!DOCTYPE html>
<html>
<head>
  <title>CL Homes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render partial: "./header" %>

<%= render partial: "./errors_and_notices" %>

<div class="users-container">
	<div class="user-show-title">
		<h1><%= current_user.fullname || current_user.username || current_user.email %></h1>
		<p><%= link_to "edit profile", edit_user_url(current_user) %></p>
		<div class="clear-fix"></div>
	</div>
	
	<%= yield %>
</div>

<%= render partial: "./footer" %>

</body>
</html>