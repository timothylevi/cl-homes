<h3>contact info</h3>

<label>email
	<input type="text" name="post[contact_email]" placeholder="<%= current_user.email %>">
</label>

<label>phone number
	<input type="text" name="post[contact_phone]" placeholder="<%= @post.contact_phone %>">
</label>

<label>contact name
	<input type="text" name="post[contact_name]" placeholder="<%= @post.contact_name %>">
</label>


<h3>post info</h3>

<select name="post[region]">
	<option>select region</option>
	
	<% User::REGIONS.each do |region|  %>
		<%= ("<option value=\"#{region}\">" + region +  "</option>").html_safe %>
	<% end %>
	
</select>

<select name="post[subcategory_id]">
	<option>select category</option>
	<% @category.subcategories.each do |sub| %>
		
		<%= ("<option value=\"#{sub.id}\">" + sub.name + "</option>").html_safe %>
		
	<% end %>
</select>


<h3>post details</h3>

<label>title
	<input type="text" name="post[title]" placeholder="<%= @post.title %>">
</label>

<label>specific location
	<input type="text" name="post[specific_location]" placeholder="<%= @post.specific_location %>">
</label>

<label>zip code
	<input type="text" name="post[zip_code]" placeholder="<%= @post.zip_code %>">
</label>

<br>
<br>

<label for="post_body">description</label> <br>

<textarea name="post[body]" id="post_body"><%= @post.body %></textarea>



