<!-- categories/show -->

<h3><%= link_to "CL", root_url %> >
		<%= link_to @category.name, category_url(@category) %></h3>
		
<br>
<br>

<% if @category.name == "housing" || @category.name == "sale" %>
	<h4><%= link_to "map view", category_map_url(@category) %></h4>
<% end %>

<br>
<br>

<ul>
	
	<% @category.posts.each do |post| %>
	
	<li>
		<%= link_to post.title, eval("#{@category.name}_post_url(post)") %>
	</li>
	
	<% end %>
</ul>